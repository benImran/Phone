<header>
    <div class="menu">
        <a href="{{ path("homepage") }}"><h1>LOGO</h1></a>
        <div class="container-menu">
            <div class="menu-picto">
                <form id="search">
                    <input type="search" placeholder="Search">
                </form>
            </div>
            <div class="menu-picto user dropdown">
                <img src="{{ asset('images/person.png') }}" alt="person">
                <div class="dropdown-content">
                    <h2>Connexion</h2>
                    <input type="text" placeholder="Adresse e-mail">
                    <input type="password" placeholder="Mot de passe">
                    <p><a href="">Se Connecter</a></p>
                    <p class="password-forget">Mot de passe oublié ? <a href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a></p>
                </div>
            </div>
            <div class="menu-picto bag">
                <p>{{ paniercount }}</p>
                <a href="{{ path("panier_index") }}">
                    <img src="{{ asset('images/bag.png') }}" alt="bag">
                </a>
            </div>
            <div class="menu-picto cart dropdown">
                <h2>Mon Panier</h2>
                <p class="price">222€</p>
                <div class="dropdown-content">
                    <div class="cart-hover">
                        <div class="cart-product">
                            <div style="background-image:url({{ asset('images/iphone-bg.jpg') }})" class="bg">
                            </div>
                            <div class="description">
                                <div>
                                    <h3>iphone 7</h3>
                                    <p class="subtitle">Ecran LCD iPhone 7</p>
                                </div>
                                <div>
                                    <p class="delete">&#215;</p>
                                    <p class="price">64€</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="commander">
                        <div class="total">
                            <h4>Total</h4>
                            <p class="price">254€</p>
                        </div>
                        <div class="all-button">
                            <button class="cart-button">Voir mon panier</button>
                            <button>Payer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="menu-marque">
        <ul class="dropdown-nav-category">
            {% for nav in navs %}
                <li><a href="">{{ nav.name|raw }}</a>
                    <div class="dropdown-nav">
                        {% for cat in categ %}
                          {% if cat.brand == nav.name %}
                            <div class="dropdown-nav-subcategory">
                                <h3 class="dropdown-nav-title">{{ cat.name|raw }}</h3>
                                <ul>
                                    {% for mod in model %}
                                      {% if mod.category == cat.name %}
                                        <li><a href="{{ path('list_product', { 'model': mod.name }) }}">{{ mod.name }}</a></li>
                                      {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                          {% endif %}
                        {% endfor %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </nav>
</header>
